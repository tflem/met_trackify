<% if user_signed_in? %>
  <div class="ui sidebar inverted vertical menu">
    <div class="header item">
      <%= semantic_icon("user") %> <%= current_user.email %>  
    </div>

    <div class="header item">
    <% admins_only do %>
      <%= link_to semantic_icon("user secret") + "Admin", admin_root_path,
          class: "item" %>
    <% end %>
    <%= link_to semantic_icon("sign out") + "Logout", destroy_user_session_path,
        method: :delete, class: "item" %>  
    </div>
  </div>  

  <div class="ui fixed inverted menu">
    <a class="item sidebar">
      <i class="icon sidebar"></i>
      <h6>Menu</h6>
    </a>
    <h1 class="header item">
      <%= link_to "Met Trackify", root_path %>
    </h1>
  
    <div class="header item right">
      <%= semantic_icon("user") %>Logged In As <%= current_user.email %>
    </div>
    <%= link_to semantic_icon("sign out") + "Logout", destroy_user_session_path,
        method: :delete, class: "item logout action" %>
  </div> 

<% else %>      
  <div class="ui sidebar inverted vertical menu">    
    <%= link_to semantic_icon("home") + "Home", root_path,
        class: "item" %>
    <%= link_to semantic_icon("user") + "Login", new_user_session_path,
        class: "item" %>    
  </div>

  <div class="ui fixed inverted menu">
    <a class="item sidebar">
      <i class="icon sidebar"></i>
      <h6>Menu</h6>
    </a>
    <h1 class="header item">
      <%= link_to "Met Trackify", root_path %>
    </h1>
    <% admins_only do %>
      <%= link_to semantic_icon("user secret") +
          "Admin", admin_root_path %>
    <% end %>
    <%= link_to semantic_icon("user plus") + "Create Account",
        new_user_registration_path, class: "item right" %>
    <%= link_to semantic_icon("user") + "Login",
        new_user_session_path, class: "item login action" %>
  </div>
  <% end %>          
</div>

