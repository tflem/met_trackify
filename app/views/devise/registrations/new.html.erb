<h2 class="ui center aligned header">Create Account</h2>

<div class="ui container forms">
  <div class="ui form">    
    <div class="ui segment orange">  

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <div class="field">
      <%= f.input :email, required: true, autofocus: true %>
    </div>

    <div class="field">  
      <%= f.input :password, required: true %>
    </div>

    <div class="field">
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="field">
      <%= f.button :submit, "Create Account", class: "ui button orange" %>
    </div>
  <% end %>

  </div>
 </div>
</div>
