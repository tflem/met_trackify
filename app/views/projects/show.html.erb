<% title(@project.project_name, "Project Summary") %>

<h2 class="ui center aligned header">Project Summary</h2>

<% admins_only do %>
  <%= link_to semantic_icon("plus") + "Add New Project", new_admin_project_path, 
      class: "ui orange button" %>
<% end %>
<%= link_to semantic_icon("list") + "Show All Projects", projects_path, 
    class: "ui orange button" %>

<table class="ui five column inverted table">
  <thead>
    <tr>
      <th>Project Number</th>
      <th>Project Name</th>   
      <th>Project Time</th>   
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>    
      <tr>
        <td><%= @project.project_number %></td>
        <td><%= @project.project_name %></td>  
        <td><%= @project.project_time %></td> 
        <td>
          <% if policy(@project).update? %>
            <%= link_to semantic_icon("edit") + "Edit Project", edit_project_path(@project), 
                class: "small ui orange button" %>
          <% end %>
        <% admins_only do %>
          <%= link_to semantic_icon("delete") + "Delete", admin_project_path(@project),
              method: :delete, class: "small ui orange button" %>   
        <% end %>         
        </td>       
      </tr>
  </tbody> 
</table>