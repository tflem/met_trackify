<% title(@product.article_name, "Product Summary") %>

<h2 class="ui center aligned header">Product Summary</h2>

<%= link_to semantic_icon("cart down arrow") + "View All Products", products_path, class: "ui orange button" %>

<table class="ui five column inverted table">
  <thead>
    <tr>
      <th>Article Name</th>
      <th>Article Number</th>      
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>    
      <tr>
        <td><%= @product.article_name %></td>
        <td><%= @product.article_number %></td>  
        <td>
            <%= link_to semantic_icon("edit") + "Edit Product", edit_product_path(@product), 
                class: "mini ui orange button" %>
            <%= link_to semantic_icon("plus") + "Add More", new_product_path, 
                class: "mini ui orange button" %>
        </td>       
      </tr>
  </tbody> 
</table>